<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="120dp"
        style="@style/heading_text"
        android:text="Verify Your Purchase Order"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        style="@style/text_normal"
        android:text="OTP is sent to email address"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/tvEmailSent"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        android:gravity="center"
        style="@style/text_normal"
        android:text="vantinhnguyen@gmail.com"
        android:textSize="16dp"
        android:textColor="#40BFFF"
        />

    <RelativeLayout
        android:id="@+id/rltAccLogin"
        android:layout_width="350dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="110dp"
        android:clipToOutline="true"
        android:background="@drawable/border_input"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/edtOTP"
            android:layout_width="277dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginLeft="50dp"
            android:hint="Your OTP"
            android:fontFamily="@font/poppins"
            android:lineSpacingExtra="4sp"
            android:textSize="14dp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="6"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="370dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="270dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>