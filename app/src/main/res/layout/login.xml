<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logoG2Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="88dp"
        />

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="176dp"
        android:text="Welcome to G2"
        android:textSize="16dp"
        android:letterSpacing="0.03"
        android:textColor="#223263"
        android:fontFamily="@font/poppins_semibold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="208dp"
        android:text="Sign in to continue"
        android:textSize="12dp"
        android:lineSpacingExtra="4sp"
        android:textColor="#9098B1"
        android:fontFamily="@font/poppins"
        />
    
    <RelativeLayout
        android:id="@+id/rltAccLogin"
        android:layout_width="350dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="258dp"
        android:clipToOutline="true"
        android:background="@drawable/border_input"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/edtAccountLogin"
            android:layout_width="277dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginLeft="50dp"
            android:hint="Your Email"
            android:fontFamily="@font/poppins"
            android:lineSpacingExtra="4sp"
            android:textSize="14dp"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="100"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rltPassLogin"
        android:layout_width="350dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="320dp"
        android:clipToOutline="true"
        android:background="@drawable/border_input"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/password"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/edtPasswordLogin"
            android:layout_width="277dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginLeft="50dp"
            android:hint="Password"
            android:fontFamily="@font/poppins"
            android:lineSpacingExtra="4sp"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1" />
    </RelativeLayout>

    <TextView
        android:id="@+id/msgLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="372dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="35dp"
        android:textSize="12sp"
        android:textColor="#FB7181"
        android:fontFamily="@font/poppins_semibold"
        android:text="Oops! Your password is not correct"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="343dp"
        android:layout_height="57dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="395dp"
        android:text="Sign In"
        android:textSize="14dp"
        android:fontFamily="@font/poppins_semibold"
        android:textAllCaps="false"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="465dp"
        >
        <View
            android:layout_width="134dp"
            android:layout_height="2dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_or"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="OR"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:letterSpacing="0.01"
            android:textColor="#9098B1"
            />
        <View
            android:layout_width="134dp"
            android:layout_height="2dp"
            android:layout_marginRight="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_or"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="505dp"
        android:clipToOutline="true"
        android:background="@drawable/border_input"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            />

        <Button
            android:id="@+id/btnLoginGG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="4sp"
            android:text="Login with Google"
            android:textAllCaps="false"
            android:textColor="#9098B1"
            android:textSize="14dp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="565dp"
        android:clipToOutline="true"
        android:background="@drawable/border_input"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            />

        <Button
            android:id="@+id/btnLoginFB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="4sp"
            android:text="Login with Facebook"
            android:textAllCaps="false"
            android:textColor="#9098B1"
            android:textSize="14dp"

            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="625dp"
        android:text="Forgot Password?"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#40BFFF"
        android:letterSpacing="0.04"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="642dp">

        <TextView
            android:id="@+id/notAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:fontFamily="@font/poppins"
            android:textColor="#9098B1"
            android:letterSpacing="0.04"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/notAccount"
            android:layout_marginRight="42dp"
            android:text="Register"
            android:fontFamily="@font/poppins"
            android:textColor="#40BFFF"
            android:letterSpacing="0.04"
            />
    </RelativeLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>