<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="30dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvAvatarReview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/ivUserReviewAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameUserReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#223263"
                android:textSize="14sp"
                android:text="Tinh Van Nguyen"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingReview"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:isIndicator="true"
                android:progressTint="#FFDB1F"
                android:rating="5"
                android:scaleX="1.2"
                android:scaleY="1.2" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/contentReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listImageReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tvDateReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_normal"
        android:text="2022-12-20 12:23:30"
        android:layout_marginTop="15dp"
        />
</LinearLayout>