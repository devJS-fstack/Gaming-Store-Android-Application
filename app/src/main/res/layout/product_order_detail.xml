<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_card"
    android:layout_marginBottom="15dp"
    android:padding="10dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cvImgProductCart"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="10dp"
            >

            <ImageView
                android:id="@+id/ivCartProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/headphone_product_1"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="140dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvNameProductCart"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                style="@style/heading_text"
                android:layout_gravity="center_vertical"
                android:text="Name product 1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="140dp"
            >
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="$299,33"
                style="@style/current_price"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x 1"
                style="@style/old_price"
                android:textSize="14dp"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>