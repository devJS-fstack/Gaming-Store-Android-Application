<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="82dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageButton
            android:id="@+id/btnNavigate"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_cart" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#FB7181"
            android:layout_marginRight="3dp"
            app:layout_constraintEnd_toEndOf="@+id/btnNavigate"
            app:layout_constraintTop_toTopOf="@+id/btnNavigate">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/titleNavigate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="@+id/btnNavigate"
            app:layout_constraintTop_toBottomOf="@id/btnNavigate"
            android:layout_below="@id/btnNavigate"
            android:gravity="center"
            android:text="Cart"
            android:fontFamily="@font/poppins"
            android:textColor="#9098B1"
            android:textSize="14sp"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
