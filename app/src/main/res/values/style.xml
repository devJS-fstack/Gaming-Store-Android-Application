<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_normal">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#223263</item>
    </style>

    <style name="heading_text">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#223263</item>
    </style>

    <style name="old_price">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#9098B1</item>
    </style>

    <style name="current_price">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">#40BFFF</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#cccccc</item>
        <item name="colorControlActivated">#ffff8800</item>
    </style>

    <style name="MyDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">16sp</item>
    </style>

</resources>